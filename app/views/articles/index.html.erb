<div class="container">
  <h1 class="title">EXTRA EXTRA!</h1>

  <div class="new-article-button">
    <%= link_to 'NEW ARTICLE', new_article_path %>
  </div>
  
  <table>
    <tr class="headers">
      <th >Title</th>
      <th>Content</th>
      <th>Author</th>
      
    </tr>
  
    <% @articles.each do |article| %>
      <tr class="display">
        <td class="article-title" height="100"><%= article.title %></td>
        <td class="article-content" height="100"><%= article.content %></td>
        <td class="article-title" height="100"><%= article.user.name %></td>
        <td class="article-button"><%= link_to 'Show', article_path(article) %></td>
        <td class="article-button"><%= link_to 'Edit', edit_article_path(article) %></td>
        <td class="article-button"><%= link_to 'Delete', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>

</div>